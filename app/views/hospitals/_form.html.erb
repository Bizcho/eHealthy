<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Nuevo hospital</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@hospital) do |f| %>
        <div class="box-body">
          <% if @hospital.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@hospital.errors.count, "error") %> prohibited this hospital from being saved:</h2>

              <ul>
              <% @hospital.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label>Nombre</label>
            <%= f.text_field :name, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Direccion</label>
            <%= f.text_field :address, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Telefono</label>
            <%= f.text_field :telephone, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Ciudad</label>
            <%= f.text_field :city , class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Estado</label>
            <%= f.text_field :state , class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Pais</label>
            <%= f.text_field :country , class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Especialidad</label>
            <%= f.text_field :specialty , class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Ubicacion</label>
            <%= f.text_field :ubication , class: "form-control"  %>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <%= f.submit%>
        </div>
      <% end %>
    </div>
    <!-- /.box -->
  </div>
  <!--/.col (left) -->
</div>

