<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Nueva peticion</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@hospital_request) do |f| %>
        <div class="box-body">
          <% if @hospital_request.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@hospital_request.errors.count, "error") %> prohibited this hospital_request from being saved:</h2>

              <ul>
              <% @hospital_request.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label>Su nombre</label>
            <%= f.text_field :name, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Correo de contacto</label>
            <%= f.email_field :email, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Telefono</label>
            <%= f.text_field :telephone, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Mensaje</label>
            <%= f.text_area :message, class: "form-control"  %>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <%= f.submit%>
        </div>
      <% end %>
    </div>
    <!-- /.box -->
  </div>
  <!--/.col (left) -->
</div>
