<section class='content-header'>
  <h1>Comentarios<small></small></h1>
</section>
<section class='content'>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listado de comentarios de usuarios</h3>

          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Subject</th>
                <th>Message</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @user_comments.each do |user_comment| %>
                <tr>
                  <td><%= user_comment.subject %></td>
                  <td><%= user_comment.message %></td>
                  <td><%= link_to 'Show', user_comment %></td>
                  <td><%= link_to 'Edit', edit_user_comment_path(user_comment) %></td>
                  <td><%= link_to 'Destroy', user_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>  
</section>