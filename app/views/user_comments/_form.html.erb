<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Nuevo comentario</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@user_comment) do |f| %>
        <div class="box-body">
          <% if @user_comment.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@user_comment.errors.count, "error") %> prohibited this user_comment from being saved:</h2>

              <ul>
              <% @user_comment.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label>Asunto</label>
            <%= f.text_field :subject, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Comentario</label>
            <%= f.text_area :message, class: "form-control"  %>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <%= f.submit%>
        </div>
      <% end %>
    </div>
    <!-- /.box -->
  </div>
  <!--/.col (left) -->
</div>