<section class='content-header'>
  <h1>Historia clinico<small></small></h1>
</section>
<section class='content'>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listado de eventos</h3>

          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Diagnostic</th>
                <th>Prediagnostic</th>
                <th>Symptoms</th>
                <th>Date start</th>
                <th>Date finish</th>
                <th>Prescription</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @clinic_events.each do |clinic_event| %>
                <tr>
                  <td><%= clinic_event.diagnostic %></td>
                  <td><%= clinic_event.prediagnostic %></td>
                  <td><%= clinic_event.symptoms %></td>
                  <td><%= clinic_event.date_start %></td>
                  <td><%= clinic_event.date_finish %></td>
                  <td><%= clinic_event.prescription %></td>
                  <td><%= link_to 'Show', clinic_event %></td>
                  <td><%= link_to 'Edit', edit_clinic_event_path(clinic_event) %></td>
                  <td><%= link_to 'Destroy', clinic_event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>  
</section>