<section class='content-header'>
  <h1>Perfiles<small></small></h1>
</section>
<section class='content'>
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-header">
          <h3 class="box-title">Listado de perfiles</h3>

          <div class="box-tools">
            <div class="input-group input-group-sm" style="width: 150px;">
              <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

              <div class="input-group-btn">
                <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
              </div>
            </div>
          </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>First name</th>
                <th>Last name</th>
                <th>Birthday</th>
                <th>Relationship</th>
                <th>Genre</th>
                <th>Blood</th>
                <th>Height</th>
                <th>Weight</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @clinic_profiles.each do |clinic_profile| %>
                <tr>
                  <td><%= clinic_profile.first_name %></td>
                  <td><%= clinic_profile.last_name %></td>
                  <td><%= clinic_profile.birthday %></td>
                  <td><%= clinic_profile.relationship %></td>
                  <td><%= clinic_profile.genre %></td>
                  <td><%= clinic_profile.blood %></td>
                  <td><%= clinic_profile.height %></td>
                  <td><%= clinic_profile.weight %></td>
                  <td><%= link_to 'Show', clinic_profile %></td>
                  <td><%= link_to 'Edit', edit_clinic_profile_path(clinic_profile) %></td>
                  <td><%= link_to 'Destroy', clinic_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <!-- /.box-body -->
      </div>
      <!-- /.box -->
    </div>
  </div>  
</section>