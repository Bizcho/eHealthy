<div class="row">
  <!-- left column -->
  <div class="col-md-6">
    <!-- general form elements -->
    <div class="box box-primary">
      <div class="box-header with-border">
        <h3 class="box-title">Nuevo perfil</h3>
      </div>
      <!-- /.box-header -->
      <!-- form start -->
      <%= form_for(@clinic_profile) do |f| %>
        <div class="box-body">
          <% if @clinic_profile.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@clinic_profile.errors.count, "error") %> prohibited this clinic_profile from being saved:</h2>

              <ul>
              <% @clinic_profile.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <label>Nombre/s</label>
            <%= f.text_field :first_name, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Apellidos</label>
            <%= f.text_field :last_name, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Cumpleanos</label>
            <%= f.date_select :birthday, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Parentesco</label>
            <%= f.text_field :relationship, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Genero</label>
            <%= f.text_field :genre, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Tipo de sangre</label>
            <%= f.text_field :blood, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Altura</label>
            <%= f.text_field :height, class: "form-control"  %>
          </div>
          <div class="form-group">
            <label>Peso</label>
            <%= f.text_field :weight, class: "form-control"  %>
          </div>
        </div>
        <!-- /.box-body -->
        <div class="box-footer">
          <%= f.submit%>
        </div>
      <% end %>
    </div>
    <!-- /.box -->
  </div>
  <!--/.col (left) -->
</div>